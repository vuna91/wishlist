{
  "name": "wishlist",
  "version": "1.0.0",
  "description": "Wishlist management tool",
  "main": "index.js",
  "scripts": {
    "test": "jest --verbose",
    "test:cov": "npm run test -- --coverage",
    "build": "tsc",
    "start": "npm run build & node dist/app.js",
    "migrate:up": "npx sequelize-cli db:migrate",
    "prettier": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuna91/wishlist.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vuna91/wishlist/issues"
  },
  "homepage": "https://github.com/vuna91/wishlist#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build",
      "pre-push": "npm run test:cov"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@hapi/joi": "~15",
    "@types/supertest": "^2.0.10",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-joi-validation": "4.0.0",
    "joi-extract-type": "^15.0.8",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.5",
    "supertest": "^6.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/hapi__joi": "~15",
    "@types/jest": "^26.0.19",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.16",
    "@types/sequelize": "^4.28.9",
    "@types/validator": "^13.1.1",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "sequelize-cli": "^6.2.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}